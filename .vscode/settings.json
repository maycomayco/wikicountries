{
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "eslint.format.enable": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "prettier.enable": false,
  "eslint.validate": [
    "typescript",
    "typescriptreact",
  ],
  "[typescript, typescriptreact]": {
    "editor.formatOnSave": true,
  }
}
